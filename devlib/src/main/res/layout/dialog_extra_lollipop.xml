<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lollipop_dialog_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/lollipop_dialog_content_bg_shape"
    android:paddingTop="15dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:padding="10dp"
        android:singleLine="true"
        android:text="提示消息"
        android:textColor="#4d4d4d"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lollipop_dialog_button_bg_selector"
        android:paddingBottom="15dp"
        android:text="确认要删除该条消息"
        android:textColor="#797979"
        android:textSize="14sp" />

    <View
        android:id="@+id/dialog_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/text"
        android:layout_marginTop="10dp"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/dialog_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@id/text"
            android:layout_weight="1"
            android:background="@drawable/lollipop_dialog_button_bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="取消"
            android:textColor="#2185cc"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:background="#d9d9d9" />

        <TextView
            android:id="@+id/positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@id/text"
            android:layout_weight="1"
            android:background="@drawable/lollipop_dialog_button_bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="#2185cc" />
    </LinearLayout>
</RelativeLayout>

